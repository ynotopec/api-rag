# Base URL for the upstream OpenAI-compatible service
OPENAI_API_BASE=http://localhost:8000/v1

# API key passed to the upstream OpenAI-compatible service
OPENAI_API_KEY=changeme

# Optional bearer token required by this service (set to blank to disable auth)
API_AUTH_TOKEN=

# Upstream model names used for different tasks
UPSTREAM_MODEL_CHAT=gpt-4o-mini
UPSTREAM_MODEL_RAG=gpt-4o-mini
UPSTREAM_MODEL_REWRITE=gpt-4o-mini

# Public model identifiers exposed by this API
MODEL_PASSTHROUGH=ai-chat
MODEL_RAG=ai-rag

# Vector store and document settings
VECTORSTORE_PATH=vectorstore.pkl
WIKI_TXT=wiki.txt
RAG_TOP_K=10
RAG_FORCE_REBUILD=false

# Conversational RAG configuration
RAG_QUERY_STRATEGY=rewrite+hyde
RAG_HISTORY_WINDOW=6
RAG_TOPIC_PREFIX=
